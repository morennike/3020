<html xmlns = "">
   <head>
      <title>XHTML page</title>

        <style type = "text/css">
        .fine {color: FFA500}

        </style>
   </head>

   <body>


      <p>Please fill out this form to login to our site.</p>

      <form method = "post" action = "">
          <!--table-->
        
      <table border ="1">
        <caption> Page 1 Login form</caption>

<!--two rows and 2 columns-->

<colgroup>
  <col align="right" span = "2">
</colgroup>

<tbody>

         <tr>
            
          <td>User id:</td>
               <td>
                <input User id = "User id" type = "text" size = "25"
                  maxlength = "30" />
                </td>
        
         </tr>

         
         	<td>Password:</td>
               <td>
                <input password = "Password" type = "password" size = "25"
                  maxlength = "30" />
              </td>
      
      </table>

      <!-- hidden inputs contain non-visual -->
            <!-- information-->

        <p>
            <input type = "hidden" name = "Morenike"
               value = "Morenike" />
        </p>

        <!-- input types "submit" and "help" insert  -->
            <!-- buttons for submitting and clearing the  -->
            <!-- form's contents                          -->
            <input type = "submit" class = "fine" value = 
               "Submit Your Entries" />
            <input type="button" name=btnHelp class = "fine" value="Help" 
       id=btnHelp onclick="submitToServer('Help');">
         

      </form>

   </body>
</html>
